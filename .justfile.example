# Example justfile showing the thin wrapper pattern
# Copy to 'justfile' and customize as needed

# Run all tests
test:
    dagger call test --source=.

# Run linter
lint:
    dagger call lint --source=.

# Build binary for macOS ARM64
build-osx:
    @mkdir -p bin
    dagger call build --source=. --goos=darwin --goarch=arm64 export --path=./bin/anker

# Build binary for Linux (CI/production)
build-linux:
    @mkdir -p bin
    dagger call build --source=. --goos=linux --goarch=amd64 export --path=./bin/anker

# Run all checks (test + lint + build)
check:
    dagger call check --source=.

# Show this help
help:
    @just --list
